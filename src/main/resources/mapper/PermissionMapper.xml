<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.paoche.dao.PermissionDao">

    <!--    findPermissionsByRoleId-->
    <select id="findPermissionsByRoleId" resultMap="permissionList">
        SELECT
            id,
            permission_name
        FROM
            permission
        WHERE
            id IN ( SELECT permission_id FROM role_permission WHERE role_id = 1 )
    </select>
    <resultMap id="permissionList" type="com.example.paoche.entity.Permission">
        <result column="id" property="id"></result>
        <result column="permission_name" property="permission_name"></result>
    </resultMap>

</mapper>